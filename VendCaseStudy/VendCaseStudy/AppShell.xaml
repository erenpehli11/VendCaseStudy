<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="VendCaseStudy.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:VendCaseStudy"
    xmlns:auth="clr-namespace:VendCaseStudy.Views.Auth"
    xmlns:views="clr-namespace:VendCaseStudy.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate auth:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate views:DashboardPage}"
        Route="DashboardPage" />

</Shell>